@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Ürün takip sistemi giriş ekranı">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Ürün takip, giriş, şifre, kayıt">
    <link rel="shortcut icon" href="@Url.Content("~/assets/img/favicon.png")">

    <title>Ürün | Takip Sistemi</title>

    <!-- Favicons -->
    <link href="@Url.Content("~/assets/img/favicon.png")" rel="icon">
    <link href="@Url.Content("~/assets/img/apple-touch-icon.png")" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="@Url.Content("~/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/boxicons/css/boxicons.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/quill/quill.snow.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/quill/quill.bubble.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/remixicon/remixicon.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/simple-datatables/style.css")" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="@Url.Content("~/assets/css/style.css")" rel="stylesheet">

    <!-- Custom styles for NiceAdmin -->
    <link href="@Url.Content("~/NiceAdmin/NiceAdmin/css/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/NiceAdmin/NiceAdmin/css/style-responsive.css")" rel="stylesheet">
</head>

<body class="login-img3-body">

    <div class="container mt-5">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form class="login-form" action="/Account/Login" method="post">
            @Html.AntiForgeryToken()

            <div class="login-wrap">
                <p class="login-img"><i class="icon_lock_alt"></i></p>

                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="icon_profile"></i></span>
                    <input type="email" class="form-control" name="Email" placeholder="Email" required autofocus>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="icon_key_alt"></i></span>
                    <input type="password" class="form-control" name="Sifre" placeholder="Şifre" required minlength="6">
                </div>

                <label class="checkbox">
                    <span class="pull-right"> <a href="/Kullanici/SifreReset">Şifremi Unuttum</a></span>
                </label>
                <div class="centered-button-container">
                    <button class="btn btn-primary btn-lg " type="submit">Giriş</button>
                    <a href="/Account/Register" class="btn btn-secondary btn-lg mt-2">Kayıt Ol</a>
                </div>
            </div>
</form>

        <div class="text-right mt-3">
            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </div>

    <!-- Back-to-top button -->
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="@Url.Content("~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/assets/vendor/quill/quill.js")"></script>
    <script src="@Url.Content("~/assets/vendor/simple-datatables/simple-datatables.js")"></script>

    <!-- Template Main JS File -->
    <script src="@Url.Content("~/assets/js/main.js")"></script>
</body>

</html>
